<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aktywne zgÅ‚oszenia:" />

    <Spinner
        android:id="@+id/bus_notification_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/bus_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_below="@+id/bus_notification_spinner"
        android:layout_marginTop="55dp"
        android:text="Button"
        android:background="@color/Yes"
        android:textColor="@color/textYes"/>

    <Button
        android:id="@+id/bus_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bus_yes"
        android:layout_centerHorizontal="true"
        android:text="Button"
        android:background="@color/No"
        android:textColor="@color/textNo"/>

    <Button
        android:id="@+id/bus_make_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_no_number"
        android:layout_toEndOf="@+id/bus_no_number"
        android:layout_toRightOf="@+id/bus_no_number"
        android:text="@string/send" />

    <EditText
        android:id="@+id/bus_yes_number"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/bus_no_number"
        android:layout_toEndOf="@+id/bus_yes"
        android:layout_toRightOf="@+id/bus_yes"
        android:ems="10"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/bus_no_number"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/bus_no"
        android:layout_toEndOf="@+id/bus_no"
        android:layout_toRightOf="@+id/bus_no"
        android:ems="10"
        android:inputType="numberSigned" />

</RelativeLayout>