<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="126dp"
    android:layout_above="@+id/stop_depatures"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/stop_cardView_lines"
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/stop_cardView_name"/>

    <TextView
        android:id="@+id/stop_cardView_name"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/stop_cardView_distance"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
</android.support.v7.widget.CardView>