<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apackage.ztmpk.profil_activity">

    <TextView
        android:id="@+id/loginView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="nasz login"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/current_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPassword"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/new_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/current_Password"
        android:layout_alignStart="@+id/current_Password"
        android:layout_below="@+id/current_Password"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="textPassword"
        android:visibility="invisible"
        tools:ignore="UnknownId" />

    <EditText
        android:id="@+id/new_replay_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_Password"
        android:layout_alignStart="@+id/new_Password"
        android:layout_below="@+id/new_Password"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPassword"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/loginView"
        android:layout_marginTop="18dp"
        android:text="@string/change_password" />

    <Button
        android:id="@+id/check_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/current_Password"
        android:layout_alignBottom="@+id/current_Password"
        android:layout_toEndOf="@+id/log_out_button"
        android:layout_toRightOf="@+id/log_out_button"
        android:text="@string/checkChange"
        android:visibility="invisible" />

    <Button
        android:id="@+id/log_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:text="@string/action_sign_out_short" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/current_Password"
        android:layout_alignStart="@+id/current_Password"
        android:layout_below="@+id/button"
        android:text="TextView"
        android:visibility="invisible"
        tools:text="@string/password" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_Password"
        android:layout_alignStart="@+id/new_Password"
        android:layout_below="@+id/current_Password"
        android:layout_marginTop="12dp"
        android:text="@string/new_password"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_replay_Password"
        android:layout_alignStart="@+id/new_replay_Password"
        android:layout_below="@+id/new_Password"
        android:text="@string/password_return"
        android:visibility="invisible" />

    <Button
        android:id="@+id/retButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/new_Password"
        android:layout_toRightOf="@+id/new_Password"
        android:text="@string/stop_return" />
</RelativeLayout>
